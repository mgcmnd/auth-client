{
    "name": "@mgcmnd/auth-client",
    "version": "0.9.5",
    "description": "Client-side authentication provider for mgcmnd.net services.",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "build:tsc": "tsc -p tsconfig.json",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@types/react": "^19.0.0",
        "react": "^19.0.0",
        "tsup": "^8.5.0",
        "typescript": "^5.0.0"
    },
    "keywords": [
        "react",
        "authentication",
        "auth-provider",
        "mgcmnd"
    ],
    "author": "Yuval Adam <yuval@magicmonad.com>",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mgcmnd/auth-client.git"
    },
    "bugs": {
        "url": "https://github.com/mgcmnd/auth-client/issues"
    },
    "homepage": "https://github.com/mgcmnd/auth-client#readme",
    "dependencies": {
        "jwt-decode": "^4.0.0"
    }
